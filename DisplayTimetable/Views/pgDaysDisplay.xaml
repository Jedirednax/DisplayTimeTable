<Page x:Class="DisplayTimetable.pgDaysDisplay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DisplayTimetable"
      xmlns:month="clr-namespace:DisplayTimetable"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgDaysDisplay">

    <ScrollViewer x:Name="src">
        <month:customDisplay x:Name="calDis" ItemsSource="{Binding days}">
            <month:customDisplay.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid x:Name="mon" Columns="7" IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </month:customDisplay.ItemsPanel>
        </month:customDisplay>
    </ScrollViewer>
</Page>
